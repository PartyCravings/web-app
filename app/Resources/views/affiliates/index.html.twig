{% extends 'base.html.twig' %}

{% block body %}
    <h1>Affiliates list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Mnemonic</th>
                <th>Comments</th>
                <th>Contact</th>
                <th>Email</th>
                <th>Website</th>
                <th>Updated</th>
                <th>Affiliatecategoryid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for affiliate in affiliates %}
            <tr>
                <td><a href="{{ path('affiliates_show', { 'id': affiliate.id }) }}">{{ affiliate.id }}</a></td>
                <td>{{ affiliate.name }}</td>
                <td>{{ affiliate.mnemonic }}</td>
                <td>{{ affiliate.comments }}</td>
                <td>{{ affiliate.contact }}</td>
                <td>{{ affiliate.email }}</td>
                <td>{{ affiliate.website }}</td>
                <td>{% if affiliate.updated %}{{ affiliate.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ affiliate.affiliateCategoryId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('affiliates_show', { 'id': affiliate.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('affiliates_edit', { 'id': affiliate.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('affiliates_new') }}">Create a new affiliate</a>
        </li>
    </ul>
{% endblock %}
