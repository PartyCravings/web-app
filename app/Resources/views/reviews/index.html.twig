{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reviews list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Reviewid</th>
                <th>Serviceid</th>
                <th>Customerid</th>
                <th>Author</th>
                <th>Text</th>
                <th>Rating</th>
                <th>Status</th>
                <th>Dateadd</th>
                <th>Dateupd</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td><a href="{{ path('reviews_show', { 'id': review.id }) }}">{{ review.id }}</a></td>
                <td>{{ review.reviewId }}</td>
                <td>{{ review.serviceId }}</td>
                <td>{{ review.customerId }}</td>
                <td>{{ review.author }}</td>
                <td>{{ review.text }}</td>
                <td>{{ review.rating }}</td>
                <td>{% if review.status %}Yes{% else %}No{% endif %}</td>
                <td>{% if review.dateAdd %}{{ review.dateAdd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if review.dateUpd %}{{ review.dateUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reviews_show', { 'id': review.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reviews_edit', { 'id': review.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reviews_new') }}">Create a new review</a>
        </li>
    </ul>
{% endblock %}
