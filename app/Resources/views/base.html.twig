<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

  <head>
    <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0" />
    <title>{% block title %}Manage that party you love{% endblock %} • PartyCravings℠</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="PartyCravings℠" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="description" content="PartyCravings℠ helps manage that beloved party. All it takes to create that massive party today. All we do is connect you with people that matter the most" />
    <meta name="keywords" content="party, events, birthday, wedding, vendor, meeting, venue, comedian, mc, artiste, musician, singer, celebration" />
    <meta name="author" content="PartyCravings℠" />
    <meta name="theme-color" content="#FF8300" />
    <!-- Preconnect for google fonts -->
    <link rel="preconnect" href="{{ preconnect('https://fonts.googleapis.com', { crossorigin :true } ) }}" crossorigin="crossorigin" />
    <link rel="preconnect" href="{{ preconnect('https://fonts.gstatic.com', { crossorigin: true } ) }}" crossorigin="crossorigin" />
    <!-- Page Manifest -->
    {% block manifest %}<link rel="manifest" href="{{ asset('build/manifest-main.json') }}" />{% endblock %}
    {% block inlinedCSS %}{% endblock %}

    {% block externalCSS %}
        <link rel="preload" href="{{ preload(asset('build/app.css'), {nopush: true}) }}" type="text/css" as="style" onload="this.rel='stylesheet'" />
        <link rel="preload" href="{{ preload(asset('build/global.css'), {nopush: true}) }}" type="text/css" as="style" onload="this.rel='stylesheet'" />
    {% endblock %}

    {% block richSnippets %}
        <script type="application/ld+json">
            {
                "@context": "http://schema.org",
                "@type": "Organization",
                "url": "{{ app.request.getSchemeAndHttpHost() }}",
                "logo": "{{ absolute_url(asset('favicon.ico'))}}",
                "contactPoint" : [
                    {
                        "@type" : "ContactPoint",
                        "telephone" : "+234 700 880 8800",
                        "contactType" : "customer service",
                        "availableLanguage" : ["English", "Yoruba"],
                        "description": "Mobile Phone Number"
                    },
                    {
                        "@type" : "ContactPoint",
                        "telephone" : "+234 814 880 8800",
                        "contactType" : "customer service",
                        "availableLanguage" : ["English", "Yoruba"],
                        "description": "Mobile Phone Number"
                    },
                    {
                        "@type" : "ContactPoint",
                        "telephone" : "+234 818 218 0211",
                        "contactType" : "customer service",
                        "availableLanguage" : ["English", "Yoruba"],
                        "description": "Whatsapp Contact Number"
                    }
                ],
                "sameAs" : [
                    "http://www.facebook.com/partycravings",
                    "http://twitter.com/partycravings",
                    "http://www.pinterest.com/partycravings/",
                    "http://www.instagram.com/partycravings/"
                  ]
            }
        </script>
        <script type="application/ld+json">
            {
              "@context": "http://schema.org/",
              "@type": "EventService",
              "serviceType": "Party Organizer",
              "provider": {
                "@type": "Organization",
                "name": "PartyCravings℠"
              },
              "areaServed": {
                "@type": "Country",
                "name": "Nigeria"
              },
              "providerMobility": "dynamic"
            }
        </script>

        <script type="application/ld+json">
            {
                "@context": "http://schema.org",
                "@type": "WebSite",
                "url": "{{ app.request.getSchemeAndHttpHost() }}",
                "potentialAction": {
                "@type": "SearchAction",
                "target": "{{ app.request.getSchemeAndHttpHost() }}/search?&query={query}",
                "query-input": "required name=query"
                }
            }
        </script>
    {% endblock %}

  </head>
        <body>
            {% block body %}
                <div class="ui vertical inverted orange sidebar menu">
                    {{ render_esi(url('sitewide_header')) }}
                        {% block content %}{% endblock %}
                    {{ render_esi(url('sitewide_footer')) }}
                </div>
            {% endblock %}

            {% block javascripts %}
                <noscript>
                    <link href="{{ asset('build/app.css') }}" rel="stylesheet" type="text/css" />
                    <link href="{{ asset('build/global.css') }}" rel="stylesheet" type="text/css" />
                </noscript>
