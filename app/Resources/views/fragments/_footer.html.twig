{% block footer %}
    <footer id="page-footer">
        <br>
        <div class="ui container" id="context">
            <h2>{{ 'OUR TOP BRANDS'|trans }}</h2>
            <div class="ui equal width grid">
                <div class="column"><img alt="brand1" class="brand-image" src="{{ asset('images/demo-4.jpg') }}"></div>
                <div class="column"><img alt="brand2" class="brand-image" src="{{ asset('images/demo-4.jpg') }}"></div>
                <div class="column"><img alt="brand3" class="brand-image" src="{{ asset('images/demo-4.jpg') }}"></div>
            </div>
        </div><br>
        <div class="ui grid">
            <div class="one wide column"></div>
            <div class="fourteen wide column" id="site-statement">
                <h3>{{ 'Why choose PartyCravings?'|trans }}</h3>
                <p>{{ 'Lorel ipsum dolo... - reason'|trans }}</p>
            </div>
            <div class="one wide column"></div>
        </div><br>
        <br>
        <div class="ui stackable grid" id="footer">
            <div class="four wide column">
                <h3>{{ 'OTHER COUNTRIES'|trans }}</h3>{% for country in similarCountries %}
                <div class="row">
                    <a href="{{ url('homepage', {'_country':country}) }}">{{ country.name|country(app.request.locale) }}</a>
                </div>{% endfor %}<br>
                <div class="row">
                    <div class="row">
                        <h3>PartyCravings Inc.</h3>
                    </div>
                    <div class="row">
                        {{ _country.address }}
                    </div>
                    <div class="row">
                        {{ _country.infoMail }}
                    </div>
                    <div class="row">
                        &copy; {{ 'now'|date('Y') }} - PartyCravings Inc.
                    </div>
                    <div class="row">
                        {{ 'rights.reserved'|trans }}
                    </div>
                </div>
            </div>
            <div class="four wide column">
                <h3>{{ 'PAGES'|trans }}</h3>{% for page in _country.pages|slice(0, 4) %}
                <div class="row">
                    <a href="{{ url('site_show_page', {'slug':page.slug}) }}">{{ page }}</a>
                </div>{% endfor %}
            </div>
            <div class="four wide column">
                <h3>{{ 'PAGES'|trans }}</h3>{% for page in _country.pages|slice(4, 4) %}
                <div class="row">
                    <a href="{{ url('site_show_page', {'slug':page.slug}) }}">{{ page }}</a>
                </div>{% endfor %}
            </div>
            <div class="four wide column">
                <h3>{{ 'NEWSLETTER'|trans }}</h3>
                <div class="row">
                    {{ 'Subscribe to our newsletter'|trans }}
                </div><br>
                <div class="row">
                    {{ form_start(newsletter) }}
                    <div class="ui icon input">
                        {{ form_row(newsletter.email, {'attr': {'placeholder': 'Your email address...'|trans } }) }} <i class="right arrow icon"></i>
                    </div>{{ form_end(newsletter) }}
                </div><br>
                <div class="row">
                    {% for social in _country.socialLinks %} <a class="ui circular {{ social.icon }} icon button" href="{{ social.link }}" name="{{ social.name }}"><i class="{{ social.icon }} icon"></i></a> {% endfor %}
                </div>
            </div>
        </div>
    </footer>
    {% jshrink %}
        {% include 'snippets/organisation.jsonld.twig' %}
        {% include 'snippets/service-provider.jsonld.twig' %}
    {% endjshrink %}
{% endblock footer %}