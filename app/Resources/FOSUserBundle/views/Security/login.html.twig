{% extends 'base.html.twig' %}
{% block title %}{{ 'security.login'|trans({}, 'FOSUserBundle') }}{% endblock %}
{% block body %}
    <body style="font-family: 'Quicksand', sans-serif; background-color: #fff7e9;">
        <br/>
        <h1 id="sitename" style="padding-left:100px;font-size:2.4em;font-family: 'Quicksand', sans-serif;">PartyCravings Inc.</h1><br/>
        <div class="row" style="text-align: center; padding-top: 60px; font-size: 4em;">
            <span>{{ 'security.login'|trans({}, 'FOSUserBundle') }}</span>
        </div><br/><br/>
        <div class="row" style="text-align: center; font-size:1.3em;">
            <span>{{ 'security.login.new'|trans({}, 'FOSUserBundle') }} <a href="{{ url('fos_user_registration_register') }}" style="color: orange;">{{ 'security.login.signup'|trans({}, 'FOSUserBundle') }}</a></span>
        </div><br/><br/>
        <div class="ui grid">
            <div class="ui two wide computer only column"></div>
            <div class="ui five wide computer sixteen wide tablet mobile container column">
                {% block fos_user_content %} {% if error %}
                    <div id="error" class="ui small error message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ url("fos_user_security_check") }}" class="ui container form" method="post">
                        {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" /> {% endif %}
                        <div class="field">
                            <label for="username" style="font-size: 1.3em;">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                            <input id="username" name="_username" placeholder="" value="{{ last_username }}" type="text" required="required" style="font-family: 'Quicksand', sans-serif;"/>
                        </div>

                        <div class="field">
                            <label for="password" style="font-size: 1.3em;">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            <input id="password" name="_password" placeholder="" type="password"/>
                        </div>

                        <div class="field">
                            <div class="ui toggle checkbox">
                                <input class="hidden" id="remember_me" name="_remember_me" tabindex="0" type="checkbox" checked="checked"/>
                                <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                            </div>
                        </div>&nbsp;
                        <a href="{{ url('fos_user_resetting_request') }}" style="color: orange;">{{ 'security.login.forgot'|trans({}, 'FOSUserBundle') }}</a>
                        <div style="text-align: center;">
                        <button id="submit" class="ui circular orange button" style="font-size:1.5em; font-family: 'Quicksand', sans-serif;" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                        </div>
                    </form>
                    {% endblock fos_user_content %}
            </div>
            <div class="ui two wide computer only column">
                <div class="ui vertical divider">
                    {{ 'security.login.or'|trans({}, 'FOSUserBundle') }}
                </div>
            </div>
            <div class="ui five wide computer center aligned sixteen wide tablet mobile column">
                {% block hwi_oauth_content %}
                <br/>
                <div class="ui center aligned labeled button" style="font-family: 'Quicksand', sans-serif;" tabindex="0">
                    <div class="big ui blue button">
                        <i class="facebook icon" style="font-size: 1.3em;"></i>
                    </div><a class="ui basic blue label" href="{{ hwi_oauth_login_url('google') }}">{{ 'security.login.withfacebook'|trans({}, 'FOSUserBundle') }}</a>
                </div><br/>
                <br/>
                <div class="ui labeled button" style="font-family: 'Quicksand', sans-serif;" tabindex="0">
                    <div class="big ui red button">
                        <i class="google icon" style="font-size: 1.3em;"></i>
                    </div><a class="ui basic red label"  href="{{ hwi_oauth_login_url('google') }}">{{ 'security.login.withgoogle'|trans({}, 'FOSUserBundle') }}&nbsp;</a>
                </div>
                {% endblock hwi_oauth_content %}
            </div>
            <div class="ui two wide computer only column"></div>
        </div>
    </body>
{% endblock %}
